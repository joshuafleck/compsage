<%=error_messages_for :discussion%>
<% form_for [@survey, discussion] do |f| %>
    <%=f.label :subject %>
    <%=f.text_field :subject %>
    <%=f.label :body %>
    <%=f.text_area :body, :rows => 4, :cols => 30 %>
    <%=f.hidden_field :parent_discussion_id %>
    <div class="submit">
      <input type="submit"  value="<%=discussion.new_record? ? 'Post Discussion' : 'Update Discussion' %>" /> or <a href="#" id='new_discussion_link_cancel'>Cancel</a>
    </div>
<% end %>
