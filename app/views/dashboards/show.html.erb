<h2>Frequent Tasks</h2>
<p><%=link_to "Sponsor a Survey", new_survey_path()%></p>
<p><%=link_to "Browse All Surveys", search_surveys_path()%></p>
<p><%=link_to "Send an Invitation", new_external_invitation_path()%></p>
<p><%=link_to "See My Invitations", invitations_path()%></p>
<h2>Recent Activity</h2>
<% if @recent_survey_invitations.empty? && @recent_network_invitations.empty? &&
      @recent_running_surveys.empty? && @recent_completed_surveys.empty? then %>
    <p>There is no recent activity.</p>
<% end %>
<% if @recent_survey_invitations.any? then %>
  <h3>Survey Invitations</h3>
  <table id="survey_invitations">
    <tr>
      <th>Job Title</th>
      <th>From</th>
      <th>Deadline</th>
      <th>&nbsp;</th>
    </tr>
    <% @recent_survey_invitations.each do |invite| %>
      <tr id="survey_invitation_<%=invite.id%>">
        <td><%=link_to invite.survey.job_title, survey_path(invite.survey)%></td>
        <td><%=invite.inviter.name%></td>
        <td><%=time_ago_in_words(invite.survey.end_date)%></td>
        <td>&nbsp;</td>
      </tr>
    <% end %>
  </table>
<% end %>

<% if @recent_network_invitations.any? then %>
  <h3>Network Invitations</h3>
  <table id="network_invitations">
    <tr>
      <th>Network</th>
      <th>Invited By</th>
      <th>&nbsp;</th>
    </tr>
    <% @recent_network_invitations.each do |invite| %>
      <tr id="network_invitation_<%=invite.id%>">
        <td><%=invite.network.name%></td>
        <td><%=invite.inviter.name%></td>
        <td>
          <%=link_to "Join Network", join_network_path(invite.network), :method => :put%>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>

<% if @recent_running_surveys.any? then %>
  <h3>Running Surveys</h3>
  <table id="running_surveys">
    <tr>
      <th>Job Title</th>
      <th>Deadline</th>
      <th>&nbsp;</th>
    </tr>
    <% @recent_running_surveys.each do |survey| %>
      <tr id="running_survey_<%=survey.id%>">
        <td><%=survey.job_title%></td>
        <td><%=time_ago_in_words(survey.end_date)%></td>
        <td>&nbsp;</td>
      </tr>
    <% end %>
  </table>
<% end %>

<% if @recent_completed_surveys.any? then %>
  <h3>Completed Surveys</h3>
  <table id="completed_surveys">
    <tr>
      <th>Job Title</th>
      <th>Sponsor</th>
      <th>&nbsp;</th>
    </tr>
    <% @recent_completed_surveys.each do |survey| %>
      <tr id="completed_survey_<%=survey.id%>">
        <td><%=survey.job_title%></td>
        <td><%=survey.sponsor.name%></td>
        <td>&nbsp;</td>
      </tr>
    <% end %>
  </table>
<% end %>
