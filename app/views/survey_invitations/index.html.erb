<% title "Invitations to #{@survey.job_title}" %>
<% highlight_tab("surveys") %>
<% if @survey.pending? %>
  <div class="breadcrumbs">
    <%= image_tag 'step_1_inactive.gif' %>
    <%= image_tag 'step_2_active.gif' %>
    <%= image_tag 'step_3_inactive.gif' %>
    <%= image_tag 'step_4_inactive.gif' %>
  </div>
<% end %>
<div id="step_container">
  <%= render :partial => "invitations/invitation_form", :locals => {:include_networks => true}%> 
</div>
<% if @survey.pending? then %>
  <div class="submit_row">
    <%= button_to "Next &ndash; Preview Survey", update_message_survey_invitations_path(@survey), :class => "next", :id => "invitation_form_submit" %>
    <%= button_to "Back &ndash; Edit Survey Design", edit_survey_path(@survey), :class => "previous", :method => :get %>
  </div>
<% else %>
  <div class="two_third_main_column">
    <p>
      <%= button_to "Update Invitation List", update_message_survey_invitations_path(@survey), :id => "invitation_form_submit" %>&nbsp;or
      <%= link_to "Cancel", survey_path(@survey) %>
    </p>
  </div>
<% end %>
