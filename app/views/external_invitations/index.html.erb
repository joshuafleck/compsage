<% title "CompSage Invitations" %>
<% breadcrumbs() %>
<% highlight_tab "dashboard" %>
<h2>CompSage Invitations</h2>
<p>Invite other organizations to join CompSage</p>
<p>
  <%=flash_messages%>
  <%=error_messages_for :invitation%>
  <% form_for :invitation, @invitation, :url => external_invitations_path do |f| %>
    <p>
      <label>Name of Invitee:</label><br />
      <%=f.text_field :name %>
    </p>
    <p>
      <label>Invitee's email address:</label> <br />
      <%=f.text_field :email %>
    </p>
    <p>
      <label>Your personalized message:</label> <br />
      <%=f.text_area :message, :rows => 4, :cols => 30 %>
    </p>
    <p>
      <input type="submit" value="Send" /> 
      <%=link_to "Done", '/' %>
    </p>
  <% end %>
</p>
<% if @invitations.size > 0 then %>
  <ul id="invitations">
    <% @invitations.each do |invitation| %>
      <li>
        <p><span>Invitee Name: </span><%=invitation.name%></p>
        <p><span>Invitee email: </span><%=invitation.email%></p>
        <p><span>Sent: </span><%=time_ago_in_words(invitation.created_at)%> ago</p>
      </li>
    <% end %>
  </ul>
<% end %>
