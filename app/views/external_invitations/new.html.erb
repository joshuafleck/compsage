<h2>New Invitation</h2>
<p>
Upon submitting an invitation, the invitee will receive an email notification including a link
for signing up.
</p>
<%=error_messages_for :external_invitation%>
<%=flash_messages%>
<% form_for :external_invitation, @external_invitation, :url => external_invitations_path do |f| %>
  <p>
    <label>Name of Invitee:</label><br />
    <%=f.text_field :name %>
  </p>
  <p>
    <label>Invitee's email address:</label> <br />
    <%=f.text_field :email %>
  </p>
  <p>
    <label>Your personalized message:</label> <br />
    <%=f.text_area :message, :rows => 4, :cols => 30 %>
  </p>
  <p>
    <input type="submit" value="Send" /> 
    <%=link_to "Cancel", '/' %>
  </p>
<% end %>
