<% title @organization.name %>
<% highlight_tab "networks" %>
<h2><%=@organization.name%></h2>
<%=flash_messages%>
<% if !@organization.logo.nil? then %>
  <p><%=image_tag @organization.logo.public_filename %></p>
<% end %>
<dl id="organization_information">
  <% unless @organization.location.blank? %>
    <dt>Branch / Location:</dt>
    <dd><%= @organization.location %></dd>
  <% end %>
  <dt>Region:</dt>
  <dd><%= @organization.city %> <%= @organization.state %> <%= @organization.zip_code %></dd>
  <dt>Contact:</dt>
  <dd><%= @organization.contact_name %></dd>
  <dt>Industry:</dt>
  <dd><%= @organization.industry %></dd>
</dl>

<div class="actions">
  <% form_tag do %>
    <span>Invite <%= @organization.name %> to </span>
    <%= collection_select("network_organization_#{@organization.id}", 
      :network_id, 
      current_organization.owned_networks, 
      :id, 
      :name, 
      {:prompt => 'A Network'})
    %>
  or
    <%= collection_select("survey_organization_#{@organization.id}", 
      :survey_id, 
      current_organization.sponsored_surveys.running, 
      :id, 
      :job_title, 
      {:prompt => 'A Survey'})
    %>
  <span id='organization_<%=@organization.id%>_response'></span>
  <% end %>
</div>
<script type="text/javascript">

function initializeObservers() {
	$('<%="survey_organization_#{@organization.id}_survey_id"%>').observe(
	  'change', 
	  sendInvitation.curry('<%=@organization.id%>','<%=surveys_path%>'));
  $('<%="network_organization_#{@organization.id}_network_id"%>').observe(
    'change', 
    sendInvitation.curry('<%=@organization.id%>','<%=networks_path%>'));	
}

</script>

<% content_for :initialize_js, "initializeObservers();"%>


