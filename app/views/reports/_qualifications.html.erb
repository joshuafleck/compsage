<% if question.qualifications_count > 0 then %>
  <p><%= link_to_function "Show Comments (#{question.qualifications_count})", "new Effect.toggle('qualification_section_#{question.id}', 'blind', {duration: .5});return false;" %></p>
  <div id="qualification_section_<%=question.id%>" style="display:none;">
    <ul id="qualifications_<%=question.id%>">
      <% question.responses.each do |response| %>
        <% if !response.qualifications.blank? then%>
          <li>
            <%= response.qualifications %>         
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div id="qualification_section_print_<%=question.id%>" class="printer_friendly_show">
    <h4>Qualifications:</h4>
    <ul id="qualifications_print_<%=question.id%>">
      <% question.responses.each do |response| %>
        <% if !response.qualifications.blank? then%>
          <li>
            <%= response.qualifications %>         
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
<%end%>
