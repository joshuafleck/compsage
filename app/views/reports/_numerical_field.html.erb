<% percentiles = question.responses.percentiles(:numerical_response, 25, 50, 75) %>
<div class="report_item">
  <h3><%= question.text %></h3>
  <% if question.response_type == "WageResponse" || question.response_type == "BaseWageResponse" then %>
  <dl class="<%=question.response_type%> <%=format%>"><% else%>
  <dl><% end %>
    <dt>Average</dt>
    <dd><%= number_with_precision(question.responses.average(:numerical_response))%></dd>
    <dt>25th Percentile</dt>
    <dd><%= number_with_precision(percentiles[0]) %></dd>
    <dt>Median</dt>
    <dd><%= number_with_precision(percentiles[1]) %></dd>
    <dt>75th Percentile</dt>
    <dd><%= number_with_precision(percentiles[2]) %></dd>
  </dl>
  <%= render :partial => "qualifications", :object => question.qualifications, :locals => {:question => question} %>
</div>
