<% percentiles = question.responses.percentiles(:numerical_response, 25, 50, 75) %>
<% word_section do %>
  <% word_p(:style => "Heading3") do %>
    <%= question.text %>
  <% end %>
  <% word_table do %>
    <% word_tr do %>
      <% word_td do %>
        <%= word_p "Average" %>
      <% end %>
      <% word_td do %>
        <%= word_p number_with_precision(question.responses.average(:numerical_response)), :justify => 'right' %>
      <% end %>
    <% end %>
    <% if question.adequate_responses_for_percentiles? then %>
      <% word_tr do %>
        <% word_td do %>
          <%= word_p "25th Percentile" %>
        <% end %>
        <% word_td do %>
          <%= word_p number_with_precision(percentiles[0]), :justify => 'right' %>
        <% end %>
      <% end %>
      <% word_tr do %>
        <% word_td do %>
          <%= word_p "Median" %>
        <% end %>
        <% word_td do %>
          <%= word_p number_with_precision(percentiles[1]), :justify => 'right' %>
        <% end %>
      <% end %>
      <% word_tr do %>
        <% word_td do %>
          <%= word_p "75th Percentile" %>
        <% end %>
        <% word_td do %>
          <%= word_p number_with_precision(percentiles[2]), :justify => 'right' %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= render :partial => 'qualifications', :object => question.qualifications %>
<% end %>
