<% title "Editing #{@network.name}" %>
<% breadcrumbs(link_to("Your Networks", networks_path)) %>
<% highlight_tab "networks" %>

<h2>Editing <%=@network.name%></h2>
<%=error_messages_for :network%>
<%=flash_messages%>
<% form_for :network, @network, :url => network_path(@network), :html => {:method => :put} do |f|%>
  <p><label>Network Name:</label><br />
    <%=f.text_field :name %></p>
  <p><label>Description:</label> <br />
    <%=f.text_area :description, :rows => 4, :cols => 30 %></p>
  <% if @network.organizations.count > 1 then %>
    <p>Change Ownership</p>
    <ul id="organizations">
      <% @network.organizations.each do |organization| %>
        <li><%=f.radio_button "owner_id", organization.id %> <%=organization.name%></li>
      <% end %>
    </ul>
  <% end %>
  <p><input type="submit" value="Edit" /> <%=link_to "Cancel", networks_path %></p>
<% end %>
