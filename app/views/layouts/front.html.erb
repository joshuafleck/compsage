<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<title>CompSage: <%=yield :title%></title>
  <%=stylesheet_link_tag "styles" %>
  <%=javascript_include_tag :defaults %>
	<script type="text/javascript">
    document.observe("dom:loaded", function() {      
  		<%=yield(:initialize_js)%>
    });	
	</script>
</head>
<body>
  <div id="header" class="<%= yield :page_name%>">
    <a href="<%=root_path()%>"><img src="/images/shawarma<%=yield :page_name%>.gif" alt="CompSage"/></a>  
		<ul id="nav" class="<%=yield :highlighted_tab %>_nav">
      <li id="home"><%= link_to "Home", root_path() %></li>
      <% if current_survey_invitation then %>
        <li id="surveys"><%= link_to "Survey", survey_path(current_survey_invitation.survey_id) %></li>
      <% end %>
      <li id="how"><%= link_to "How it works", home_path('how') %></li>     
      <li id="join">
      		<%= link_to "Sign Up", has_key? ? new_account_path() : signup_path() %>
      </li>
		</ul> 
	</div>
	<div id="container">
		<%=yield(:sidebar)%>
		<div id="main_content" class="<%=yield(:sidebar) ? 'with_side_bar' : ''%>">
			<%=yield %>
		</div>
		<br id="end_break" />
	</div>
	<div id="container_cap">&nbsp;</div>
  <div id="footer">
    <ul class="links">
      <li><%= link_to "Contact", home_path('contact') %></li>
      <li><%= link_to "Privacy", home_path('privacy') %></li>
      <li><%= link_to "About", home_path('about') %></li>
    </ul>
    <div id="copyright">Copyright <a href="http://www.huminsight.com">HumInsight, Inc.</a></div>
  </div>
  <script type="text/javascript">
    var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
    document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
  </script>
  <script type="text/javascript">
      try {
        var pageTracker = _gat._getTracker("UA-9421656-1");
        pageTracker._trackPageview();
      } catch(err) {}
  </script>  
</body>
</html>
