<%=flash_messages%>
<% title "Reset your password" %>
<% breadcrumbs() %>
<h2>Reset your password</h2>
<p>Enter a new password below. It will take effect immediately.</p>
<% form_tag reset_account_path( :key =>  @organization.reset_password_key) do -%>
<p><label for="password">Password</label>
<%= password_field_tag 'password' %></p>
<p><label for="password_confirmation">Confirm Password</label>
<%= password_field_tag 'password_confirmation' %></p>
<p><%= submit_tag 'Reset Password' %></p>
<% end -%>
