<% title "My Account" %>
<% breadcrumbs() %>
<h2>My Account</h2>
<%=flash_messages%>
<p><%=link_to "Edit My Account", edit_account_path %></p>
<% if !@organization.logo.nil? then %>
  <p><%=image_tag @organization.logo.public_filename(:thumb) %></p>
<% end %>
<p><span class="label">Name of Organization: </span><%=@organization.name%></p>
<p><span class="label">Contact Name: </span><%=@organization.contact_name%></p>
<p><span class="label">Email Address: </span><%=@organization.email%></p>
<p><span class="label">Location: </span><%=@organization.location%></p>
<p><span class="label">City: </span><%=@organization.city%></p>
<p><span class="label">State: </span><%=@organization.state%></p>
<p><span class="label">Zip Code: </span><%=@organization.zip_code%></p>
<p><span class="label">Industry: </span><%=@organization.industry%></p>
