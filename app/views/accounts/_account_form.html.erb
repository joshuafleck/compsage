  <%=f.text_field :email %>
  <%=f.label :location, 'Name of Office or Branch' %> 
  <%=f.text_field :location %>
  <%=f.label :city %> 
  <%=f.text_field :city %>
  <%=f.label :state %> 
  <%= f.select :state, ['AK',
