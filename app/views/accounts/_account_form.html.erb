    <p><%=image_tag @organization.logo.public_filename(:standard_thumbnail) %></p>
  <% end %>
  <%=f.label :logo %> 
  <%= file_field 'logo','uploaded_data' %>
  <%=f.label :password %> 
  <%=f.password_field :password %>
  <%=f.label :password_confirmation %> 
  <%=f.password_field :password_confirmation %>
  <p>
    <input type="submit" value='<%=@organization.new_record? ? "Create" : "Update"%>' /> 
    <% if @organization.new_record? && logged_in_from_survey_invitation? then %>
      <%=link_to "Cancel", survey_path(current_survey_invitation.survey.id) %>
    <% elsif @organization.new_record? %>
      <%=link_to "Cancel", new_session_path %>
    <% else %>
      <%=link_to "Cancel", account_path %>
    <% end %>
  </p>
<% end %>
