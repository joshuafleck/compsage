<%
  title "#{current_association.name} &ndash; Sign In"
  highlight_tab 'home_no_graphic'
%>
<div class="main_page">
  <div style="display: none";>Need this div for flash notices in IE6</div>
  <%=flash_messages%>
  <%=error_messages_for :association_member%>
  <div class="association_greeting">
    <% if current_association.logo.file? %>
      <% image_tag current_association.logo.url %>
    <% end %>
    <% if current_association.member_greeting.blank? then %>
      <p>
      Welcome to CompSage, provided by <%= current_association.name %>! You may log in on the right. If this is your
      first time logging in, fill out the form on the bottom. Contact <%= association_contact_information %>
      if you have any problems.
      </p>
    <% else %>
      <%= simple_format current_association.member_greeting %>
    <% end %>
  </div>  
  <div class="association_member_login">
    <span class="info">Already used CompSage?</span>
    <% form_tag sign_in_association_member_path(@form_options) do %>
      <%= hidden_field_tag 'submitted_returning_firm_form', :true %>
      <div style="float: left;">
      <label for="email">Email</label>
      <%= text_field_tag 'email', @login, :size => 30, :style=>"display:inline;"%><br />
      <label for="remember_me" style="display:inline;"><%= check_box_tag 'remember_me' %>Remember me</label>
      </div>
      <div style="float: left;">
        <label for="password">Password</label>
        <%= password_field_tag 'password', '', :size => 30, :style=>"display:inline;" %> 
        <%= submit_tag 'Log in' %> <%=link_to "Forgot password?", forgot_account_path%>
      </div>
    <% end %>
    <br clear="all">
  </div>
  <br clear="all">
  <h2 class="first_time">First time using CompSage?</h2>
  <div class="association_sign_in_more">
    <h3>Get started now!</h3>
    <% form_tag sign_in_association_member_path(@form_options) do %>
      <p class="association_sign_in_info">Email must match the one on file with <%= current_association.name %>.
      This is commonly your companies HR employee or manager.
      <a href="mailto:<%= current_association.contact_email %>">Contact them</a> with questions
       regarding registration or to use another email.</p>
      <label for="email">Email</label>
      <%= text_field_tag 'email', @login, :size => 25, :class=> 'email1' %>
      <div class="box_container">
        <div class="box">
          <label for="password">Password</label>
          <%= password_field_tag 'password', '', :size => 20, :class=> 'password1' %>  
        </div>
        <div class="box">
          <label for="password_confirmation">Re-Enter Password</label>
          <%= password_field_tag 'password_confirmation', '', :size => 20 %>
        </div>
      </div>
      <div class="submit">
        <%= submit_tag 'Sign Up' %>
      </div>
    <% end %>
  </div>
  <div class="association_sign_in_more">
    <h3>...Or learn about CompSage</h3>
    <ol>
      <li>Get results in as little as 3 days.</li>
      <li>Ask our standard questions or add questions of your own.</li>
      <li>Get compensation data in use right now by companies you choose.</li>
      <li><%= current_association.name %> has provided a list of peers to survey, so you don't
        have to hunt for participants.</li>
    </ol>
    <a href="#" onclick="javascript:$('how_container').appear(); return false;">
      Need more info? Visualize how CompSage works.
    </a>
  </div>
  <br clear="all">
</div>
<div id="how_container" style="display: none;">
<%= render :partial => 'home/how' %>
</div>